<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#120A1E"
    tools:context=".GalleryActivity">

    <!-- Toolbar: Styled to match your theme -->
    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="#120A1E"
        app:layout_constraintTop_toTopOf="parent"
        app:title="Gallery"
        app:titleTextColor="#FFFFFF"
        app:theme="@style/ThemeOverlay.MaterialComponents.Dark.ActionBar" />

    <!-- Tags view: This is the main "Tag List" screen -->
    <LinearLayout
        android:id="@+id/tagsView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:visibility="gone"
        tools:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toolbar">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/tagsRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="16dp"
            tools:listitem="@layout/list_item_tag" />

    </LinearLayout>

    <!-- Photos view: This is the "Photo Grid" screen (MODIFIED) -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/photosView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toolbar">

        <!-- =================== NEW BREADCRUMB TEXTVIEW =================== -->
        <TextView
            android:id="@+id/breadcrumbText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Gallery > Important Documents" />
        <!-- ============================================================= -->


        <!-- Tag filter section: This will show active tag "chips" (Constrained to breadcrumb) -->
        <HorizontalScrollView
            android:id="@+id/tagFilterContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:visibility="gone"
            app:layout_constraintTop_toBottomOf="@id/breadcrumbText">

            <LinearLayout
                android:id="@+id/tagFilterLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal" />
        </HorizontalScrollView>

        <!-- Date filter button (STYLED) -->
        <Button
            android:id="@+id/dateFilterButton"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:text="Filter by Date"
            android:textColor="#4AF0F4"
            app:strokeColor="#4AF0F4"
            android:visibility="visible"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tagFilterContainer" />

        <!-- Vault button (STYLED) -->
        <Button
            android:id="@+id/vaultButton"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:text="Vault"
            android:textColor="#4AF0F4"
            app:strokeColor="#4AF0F4"
            android:visibility="gone"
            app:layout_constraintEnd_toStartOf="@id/clearFiltersButton"
            app:layout_constraintTop_toTopOf="@id/dateFilterButton" />

        <!-- Clear filters button (STYLED) -->
        <Button
            android:id="@+id/clearFiltersButton"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:text="Clear Filters"
            android:textColor="#4AF0F4"
            android:visibility="visible"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/dateFilterButton" />

        <!-- RecyclerView for photos (CONSTRAINED) -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/photosRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:padding="4dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/dateFilterButton"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:listitem="@layout/list_item_photo_grid" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- Empty state view (STYLED) -->
    <TextView
        android:id="@+id/emptyStateText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="No Photos Found"
        android:textColor="#AAAAAA"
        android:textSize="18sp"
        android:visibility="gone"
        android:drawableTop="@drawable/ic_gallery"
        android:drawablePadding="16dp"
        app:drawableTint="#AAAAAA"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
