<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme - moved to themes.xml -->

    <!-- Splash screen theme -->
    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowBackground">@color/splash_background</item>
    </style>

    <!-- Alert dialog theme -->
    <style name="AlertDialogTheme" parent="Theme.MaterialComponents.DayNight.Dialog.Alert">
        <item name="android:background">@color/vault_background</item>
        <item name="android:textColorPrimary">@color/vault_text_primary</item>
        <item name="android:textColorSecondary">@color/vault_text_secondary</item>
        <item name="colorAccent">@color/vault_accent</item>
        <item name="buttonBarPositiveButtonStyle">@style/AlertDialog.Button.Positive</item>
        <item name="buttonBarNegativeButtonStyle">@style/AlertDialog.Button.Negative</item>
    </style>

    <!-- Alert dialog button styles -->
    <style name="AlertDialog.Button.Positive" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/vault_accent</item>
        <item name="rippleColor">@color/vault_accent</item>
    </style>

    <style name="AlertDialog.Button.Negative" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/text_secondary</item>
        <item name="rippleColor">@color/text_secondary</item>
    </style>

    <!-- Button styles -->
    <style name="Button.Primary" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">@color/white</item>
        <item name="backgroundTint">@color/primary_color</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="Button.Secondary" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:textColor">@color/primary_color</item>
        <item name="strokeColor">@color/primary_color</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <!-- Text styles -->
    <style name="TextAppearance.Title" parent="TextAppearance.MaterialComponents.Headline5">
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextAppearance.Subtitle" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="android:textColor">@color/text_secondary</item>
    </style>

    <style name="TextAppearance.Body" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textColor">@color/text_primary</item>
    </style>

    <!-- Card styles -->
    <style name="Card.Default" parent="Widget.MaterialComponents.CardView">
        <item name="cardElevation">4dp</item>
        <item name="cardCornerRadius">8dp</item>
        <item name="android:layout_margin">8dp</item>
    </style>

    <!-- Chip styles -->
    <style name="Chip.Tag" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="chipBackgroundColor">@color/tag_chip_background_color</item>
        <item name="chipStrokeColor">@color/tag_chip_stroke_color</item>
        <item name="chipStrokeWidth">1dp</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>

    <!-- Progress bar styles -->
    <style name="ProgressBar.Default" parent="Widget.AppCompat.ProgressBar">
        <item name="android:indeterminateTint">@color/primary_color</item>
    </style>

    <!-- This is the one we are keeping. The duplicate has been removed. -->
    <style name="EndSessionButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textColor">#FF5252</item> <!-- A standard red color -->
        <item name="rippleColor">#4DFF5252</item> <!-- Optional: for a red ripple effect -->
    </style>
</resources>
